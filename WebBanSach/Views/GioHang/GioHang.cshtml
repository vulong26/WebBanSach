 </style>
</head>

<h2>GioHang</h2>
<table>
    <tr>
        <td> Mã sách </td>

        <td> Tên sách </td>

        <td> Ảnh sách </td>

        <td> Đơn giá </td>

        <td> Số Lượng  </td>

        <td> Thành Tiền  </td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td> @item.iMaS</td>

            <td> @item.sTenS</td>

            <td> <img src="@Url.Content("~/Images/" +item.sTenFileAnh)" width="50" height="50" /> </td>

            <td> @item.dDonGia.ToString("#,##") VNĐ </td>

            <td> @item.iSoLuong  </td>

            <td>@item.ThanhTien.ToString("#,##") VNĐ </td>

        </tr>



    }
    <tr>
        <td colspan="6" style="text-align:right;color:blue">
            @Html.ActionLink("Sửa", "SuaGH")
        </td>

    </tr>
    <tr>
        <td colspan="6" style="text-align:right;color:blue">
          @using (Html.BeginForm("DatHang", "GioHang"))
            {
              <input type="submit" value="Đặt hàng"/>
            }
        </td>

    </tr>
</table>
