                <td>@Html.TextBox("txtSoLuong", item.iSoLuong)  </td>

                <td>@item.ThanhTien.ToString("#,##") VNĐ </td>
                <td>
                    <input type="submit" value="Cập nhật"/>
                    <br />
                    @Html.ActionLink("Xóa","XoaGioHang",new {@iMaSp=item.iMaS})

                </td>
            </tr>

         }

        }
