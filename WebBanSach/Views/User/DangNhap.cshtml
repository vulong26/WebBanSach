
@{
    Layout = null;
    ViewBag.Title = "DangNhap";
}

<!DOCTYPE html>

<html>
<head>
    <head>
        <title>Đăng nhập</title>
        <!-- Meta tag Keywords -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        <meta name="keywords" content="Online Login Form Responsive Widget,Login form widgets, Sign up Web forms , Login signup Responsive web form,Flat Pricing table,Flat Drop downs,Registration Forms,News letter Forms,Elements">
        <script type="application/x-javascript">
             addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
            function hideURLbar(){ window.scrollTo(0,1); }
            
        </script>
       
        <link href="~/Content/Login/style.css" rel="stylesheet" type="text/css" media="all"> <!-- Style-CSS -->
        <link rel="stylesheet" href="css/font-awesome.css">
        <link href="~/Content/Login/font-awesome.css" rel="stylesheet" />
        <link href="//fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i&amp;subset=cyrillic,cyrillic-ext,greek,greek-ext,latin-ext,vietnamese" rel="stylesheet">
        <link href="//fonts.googleapis.com/css?family=Dosis:200,300,400,500,600,700,800&amp;subset=latin-ext" rel="stylesheet">
        <!-- //online-fonts -->
    </head>
</head>

<body>
    <h1>@ViewBag.ThongBao</h1>

    <!-- main -->
    <div class="center-container">
        <!--header-->
        <div class="header-w3l">
            <h1>Chào mừng tới LDBooK</h1>
        </div>
        <!--//header-->
        <div class="main-content-agile">
            <div class="sub-main-w3">
                <div class="wthree-pro">
                    <h2>Đăng nhập</h2>
                </div>
                <form action="#" method="post">
                    <div class="pom-agile">
                        <input placeholder="Tài khoản" name="txtTaiKhoan" class="user" type="text">

                    </div>
                    <div class="pom-agile">
                        <input placeholder="Password" name="txtMatKhau" class="pass" type="password" required="">

                    </div>
                    <div class="sub-w3l">

                        <div class="dki"> @Html.ActionLink("Ðăng ký", "DangKy", "User", htmlAttributes: new { @class = "DangKy" }) </div>
                        <h6><a href="#">Forgot Password?</a></h6>

                        <div class="right-w3l">
                            <input type="submit" value="Đăng nhập">
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>

</body>

</html>
