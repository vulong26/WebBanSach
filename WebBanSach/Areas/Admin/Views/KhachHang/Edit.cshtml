@using WebBanSach.Areas.Admin.Models.Entities;
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var khachhang = (KhachHang)ViewBag.kh;
    var tk = Session["username"];
    if (tk == null)
    {
        Response.Redirect("~/Admin/Login/Login");
    }
}
@section ProfileSetting
{
    @tk
}

@section Profile
    {
    <div class="profile clearfix">
        <div class="profile_pic">
            <img src="~/Areas/Admin/Content/Photo/Anh3x4.jpg" alt="..." class="img-circle profile_img">
        </div>
        <div class="profile_info">
            <span>Xin chào,</span>
            <h2>@tk</h2>
        </div>
    </div>
}
<div class="">
    <div class="row">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Sửa</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br />
                    <form action="Edit" method="post" role="form" id="demo-form2" data-parsley-validate class="form-horizontal form-label-left" enctype="multipart/form-data">
                        <input type="hidden" id="MaKH" name="MaKH" value="@khachhang.MaKH" />
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="HoTen">
                                Tên khách hàng <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                <input type="text" name="HoTen" id="HoTen" required="required" class="form-control " value="@khachhang.HoTen">
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="Email">
                                Email <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                <input type="text" name="Email" id="Email" required="required" class="form-control " value="@khachhang.Email">
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="DiaChi">
                                Địa chỉ <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                <textarea rows="3" name="DiaChi" id="DiaChi" required="required" class="form-control">@khachhang.DiaChi</textarea>
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="DienThoai">
                                Số điện thoại <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                <input type="text" name="DienThoai" id="DienThoai" required="required" class="form-control " value="@khachhang.DienThoai">
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="GioiTinh">
                                Giới tính <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                <select class="select2_single form-control" required="required" name="GioiTinh" id="GioiTinh" value="@khachhang.GioiTinh">
                                    @{
                                        if (khachhang.GioiTinh == "Nam")
                                        {
                                            <option selected>Nam</option>
                                            <option>Nữ</option>
                                        }
                                        else
                                        {
                                            <option selected>Nữ</option>
                                            <option>Nam</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="NgaySinh">
                                Ngày sinh <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                <input value="@khachhang.NgaySinh.ToString("dd/MM/yyyy")" required="required" id="NgaySinh" name="NgaySinh" class="date-picker form-control"
                                       placeholder="dd/MM/yyyy" type="text" onclick=" this.type='date'">
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="TaiKhoan">
                                Tài khoản
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                <input type="text" name="TaiKhoan" id="TaiKhoan" class="form-control " value="@khachhang.TaiKhoan">
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="MatKhau">
                                Mật khẩu
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                <input type="text" name="MatKhau" id="MatKhau" class="form-control " value="@khachhang.MatKhau">
                            </div>
                        </div>
                        <div class="ln_solid"></div>
                        <div class="item form-group">
                            <div class="col-md-6 col-sm-6 offset-md-3">
                                <button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("KhachHang","KhachHang")';">Đóng</button>
                                <button class="btn btn-primary" type="reset">Reset</button>
                                <button type="submit" class="btn btn-success">Lưu</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

