@using WebBanSach.Areas.Admin.Models.Entities;
@{
    ViewBag.Title = "ChiTiet";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var khachhang = (KhachHang)ViewBag.kh;
    var tk = Session["username"];
    if (tk == null)
    {
        Response.Redirect("~/Admin/Login/Login");
    }
}
@section ProfileSetting
{
    @tk
}

@section Profile
    {
    <div class="profile clearfix">
        <div class="profile_pic">
            <img src="~/Areas/Admin/Content/Photo/Anh3x4.jpg" alt="..." class="img-circle profile_img">
        </div>
        <div class="profile_info">
            <span>Xin chào,</span>
            <h2>@tk</h2>
        </div>
    </div>
}
<div class="">
    <div class="row">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Chi tiết</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br />
                    <form action="Edit" method="post" role="form" id="demo-form2" data-parsley-validate class="form-horizontal form-label-left" enctype="multipart/form-data">
                        <input type="hidden" id="MaKH" name="MaKH" value="@khachhang.MaKH" />
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="HoTen">
                                Tên khách hàng
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                <input type="text" name="HoTen" id="HoTen" required="required" class="form-control " value="@khachhang.HoTen" readonly>
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="Email">
                                Email
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                <input type="text" name="Email" id="Email" required="required" class="form-control " value="@khachhang.Email" readonly>
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="DiaChi">
                                Địa chỉ
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                <textarea rows="3" name="DiaChi" id="DiaChi" required="required" class="form-control" readonly>@khachhang.DiaChi</textarea>
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="DienThoai">
                                Số điện thoại
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                <input type="text" name="DienThoai" id="DienThoai" required="required" class="form-control " value="@khachhang.DienThoai" readonly>
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="GioiTinh">
                                Giới tính
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                <input type="text" class="form-control " required="required" name="GioiTinh" id="GioiTinh" value="@khachhang.GioiTinh" readonly />
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="NgaySinh">
                                Ngày sinh
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                <input value="@khachhang.NgaySinh.ToString("dd/MM/yyyy")" required="required" id="NgaySinh" name="NgaySinh" class="date-picker form-control"
                                       type="text" readonly>
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="TaiKhoan">
                                Tài Khoản
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                <input type="text" name="TaiKhoan" id="TaiKhoan" required="required" class="form-control " value="@khachhang.TaiKhoan" readonly>
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="MatKhau">
                                Mật khẩu
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                <input type="text" name="MatKhau" id="MatKhau" required="required" class="form-control " value="@khachhang.MatKhau" readonly>
                            </div>
                        </div>
                        <div class="ln_solid"></div>
                        <div class="item form-group">
                            <div class="col-md-6 col-sm-6 offset-md-3">
                                <button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("KhachHang","KhachHang")';">Đóng</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

