@using WebBanSach.Areas.Admin.Models.Entities;
@{
    ViewBag.Title = "ChiTiet";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var tacgia = (TacGia)ViewBag.tg;
    var tk = Session["username"];
    if (tk == null)
    {
        Response.Redirect("~/Admin/Login/Login");
    }
}
@section ProfileSetting
{
    @tk
}

@section Profile
    {
    <div class="profile clearfix">
        <div class="profile_pic">
            <img src="~/Areas/Admin/Content/Photo/Anh3x4.jpg" alt="..." class="img-circle profile_img">
        </div>
        <div class="profile_info">
            <span>Xin chào,</span>
            <h2>@tk</h2>
        </div>
    </div>
}
<div class="">
    <div class="row">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Chi tiết</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br />
                    <form action="Edit" method="post" role="form" id="demo-form2" data-parsley-validate class="form-horizontal form-label-left" enctype="multipart/form-data">
                        <input type="hidden" id="MaTG" name="MaTG" value="@tacgia.MaTG" />
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="TenNV">
                                Tên tác giả
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                <input type="text" name="TenTG" id="TenTG" required="required" class="form-control " value="@tacgia.TenTG" readonly>
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="MoTa">
                                Mô tả
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                <textarea rows="3" name="MoTa" id="MoTa" required="required" class="form-control" readonly>@tacgia.MoTa</textarea>
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="GioiTinh">
                                Giới tính
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                <input type="text" class="form-control " required="required" name="GioiTinh" id="GioiTinh" value="@tacgia.GioiTinh" readonly />
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="NgaySinh">
                                Ngày sinh
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                <input value="@tacgia.NgaySinh.ToString("dd/MM/yyyy")" required="required" id="NgaySinh" name="NgaySinh" class="date-picker form-control"
                                       type="text" readonly>
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="SoTacPham">
                                Số tác phẩm
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                <input value="@tacgia.SoTacPham" required="required" type="number" id="SoTacPham" class="form-control " name="SoTacPham" min="0" step="1000000" readonly>
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="Image">
                                Ảnh
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                <img id="blah" height="200px" width="250px" src="~/Areas/Admin/Content/Photo/@tacgia.Image" alt="your image" />
                            </div>
                        </div>
                        <div class="ln_solid"></div>
                        <div class="item form-group">
                            <div class="col-md-6 col-sm-6 offset-md-3">
                                <button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("TacGia","TacGia")';">Đóng</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

